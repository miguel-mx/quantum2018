{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.16/b-1.5.1/datatables.min.css"/>
{% endblock %}

{% block body %}
</div>

<div class="container-fluid">
    <h4 class="my-5">Quantum 2018 <small>Registration list</small></h4>

    <table id="registry" class="table table-sm table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Institution</th>
                <th>Status</th>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
        {% for registration in registrations %}
            <tr>
                <td><a href="{{ path('registration_show', { 'slug': registration.slug }) }}">{{ registration.name }} {{ registration.surname }}</a></td>
                <td>{{ registration.email }}</td>
                <td>{{ registration.institution }}</td>
                <td>{{ registration.status }}</td>
                <td>{{ registration.title }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.16/b-1.5.1/b-html5-1.5.1/datatables.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#registry').DataTable({
            } );
        } );
    </script>
{% endblock %}